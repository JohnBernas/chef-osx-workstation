# Include plugins
. "$HOME/.config/fish/plugins/git.fish"
. "$HOME/.config/fish/plugins/ruby.fish"
. "$HOME/.config/fish/plugins/bundler.fish"
. "$HOME/.config/fish/plugins/foreman.fish"
. "$HOME/.config/fish/plugins/heroku.fish"
. "$HOME/.config/fish/plugins/dev.fish"
. "$HOME/.config/fish/plugins/custom.fish"


# Disable fish greeting
set -gx fish_greeting ''

set -gx LC_CTYPE en_US.UTF-8

# Add work to CDPATH
set -U CDPATH . $HOME/Work

# Add identities to ssh-agent if they are not added already
ssh-add -l | grep "The agent has no identities"; and ssh-add

#
# rbenv
#
set PATH $HOME/.rbenv/bin $PATH
set PATH $HOME/.rbenv/shims $PATH
rbenv rehash >/dev/null ^&1

#
# jbenv
#
set PATH $HOME/.jenv/bin $PATH
. (jenv init -)
